<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>To-Do List</title>
  <link rel="stylesheet" href="/main.css">
</head>
<body>
  <div class="div">
    <h1>To-Do List</h1>
    <form action="/tasks/create" method="POST">
    <input type="text" name="task" placeholder="New task" required>
    <input type="text" name="priority" placeholder="Priority" required>
    <input type="date" name="dueDate" required>
    <button type="submit">Add Task</button>
    </form>
    <ul>
    <% tasks.forEach((task, index) => { %>
      <li>
        <form action="/tasks/<%= index %>/update" method="POST">
          <input type="text" name="task" value="<%= task.task %>" required>
          <input type="text" name="priority" value="<%= task.priority %>" required>
          <input type="date" name="dueDate" value="<%= task.dueDate %>" required>
          <button type="submit">Update</button>
        </form>
      </li>
    <% }) %>
  </ul>
</div>
</body>
</html>